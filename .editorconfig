# https://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{bat,cmd,ps1}]
indent_size = 4
end_of_line = crlf

[*.md]
indent_size = 4
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.rs]
indent_size = 4
